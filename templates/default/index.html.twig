{% extends 'base.html.twig' %}

{% block title %}Blog mainPage{% endblock %}

{% block body %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class='accordion w-50 m-auto' id='accordionArticle'>
                {% for article in articles %}
                  <div class="card">
                    <div class="card-header p-0" id="article-{{article.id}}">
                      <h2 class="mb-0 p-0 text-center">
                        <button class="btn btn-link row p-3 w-100" type="button" data-toggle="collapse" data-target="#a{{ article.id }}" aria-expanded="false" aria-controls="{{article.id}}" style='text-decoration:none;color:black;'>
                            <span class='col-9 '>{{ article.Nom }}</span> 
                            <span class=' col-2 badge badge-secondary justify-self-end'>
                                {{ article.DateParution|date('Y-m-d') }}
                            </span>

                        </button>
                      </h2>
                    </div>

                    <div id="a{{article.id}}" class="collapse" aria-labelledby="article-{{article.id}}" data-parent="#accordionArticle">
                      <div class="card-body">
                            {{ article.Description }}
                      </div>
                    </div>
                  </div>
                {% endfor %}
            </div>
        {% else %}
            <div class='d-flex justify-content-center align-items-center'>
                <p class='h5'><a href='/login' style='text-decoration:none;'>Connectez</a> ou <a href='/register' style='text-decoration:none;'>inscrivez</a> vous pour acc√©der aux articles</p>
            </div>
        {% endif %}

{% endblock %}
