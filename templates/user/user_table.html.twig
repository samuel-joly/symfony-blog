
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password|slice(0,50) }}</td>
                <td class='d-flex justify-content-center align-items-center'>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class='m-1 btn btn-success'>show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" style='width:4em;' class='m-1 btn btn-warning'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<a class='btn btn-primary' href="{{ path('user_new') }}" class='btn btn-primary m-1'>Create new</a>
